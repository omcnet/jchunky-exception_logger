<div class="tools">
  <%= link_to 'Delete', { :action => 'destroy', :id => @exception }, :method => :delete, :remote => :true, :class => "util" %>
  <span class="pipe">|</span>
  <%= link_to "Close", logged_exceptions_url, :remote => true, :onclick => "$('showpage').style.display='none'; return false;", :class => "util" %>
</div>

<div class="date">
  <%= @exception.created_at.strftime(Time::DATE_FORMATS[:exc_full]) %>
</div>
<h1><%= @exception.name %></h1>

<h2>Request</h2>
<%= raw textilize(@exception.request) %>

<h2>Backtrace</h2>
<%= raw simple_format @exception.message %>

<div id="backtrace">
  <%= raw @exception.backtrace.gsub(/\n/,"<br />") %>
</div>

<h2>Environment</h2>
<%= raw textilize(@exception.environment) %>